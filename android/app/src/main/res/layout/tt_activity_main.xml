<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragment_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.show.tt.ui.fragment.ChatFragment" />

    <fragment
        android:id="@+id/fragment_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.show.tt.ui.fragment.ContactFragment" />

     <fragment
        android:id="@+id/fragment_internal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.show.tt.ui.fragment.InternalFragment" />

    <fragment
        android:id="@+id/fragment_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.show.tt.ui.fragment.MyFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"

        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.show.tt.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_chat"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.show.tt.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_contact"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.show.tt.ui.CircleButton
            android:id="@+id/tabbtnCamera"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#FFBB33" />

        <com.show.tt.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_internal"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.show.tt.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_my"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>